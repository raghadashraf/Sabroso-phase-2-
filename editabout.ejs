<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit About</title>
  <link rel="stylesheet" href="CSS/admin.css">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
</head>
<body>
  <div class="sidebar">
    <!-- Sidebar content -->
  </div>
  <div class="content">
    <h2>Edit About Section</h2>
    <form id="editForm" method="POST" action="/editabout" onsubmit="return handleSubmit(event)">
      <textarea name="aboutContent" rows="10" cols="50"></textarea><br>
      <input type="submit" value="Save Changes">
    </form>
  </div>

  <script>
    function handleSubmit(event) {
      event.preventDefault(); // Prevent default form submission

      // Perform form submission using fetch or other AJAX methods
      fetch('/editabout', {
        method: 'POST',
        body: new FormData(document.getElementById('editForm'))
      })
      .then(response => {
        if (response.ok) {
          // Show success alert using SweetAlert2
          Swal.fire({
            icon: 'success',
            title: 'Changes Saved!',
            showConfirmButton: false,
            timer: 1500 // Close alert after 1.5 seconds
          });
          // Optionally, you can redirect or perform additional actions here
        } else {
          throw new Error('Failed to save changes');
        }
      })
      .catch(error => {
        // Show error alert using SweetAlert2
        Swal.fire({
          icon: 'error',
          title: 'Oops...',
          text: error.message
        });
      });

      return false; // Prevent further bubbling of the event
    }
  </script>
</body>
</html>
